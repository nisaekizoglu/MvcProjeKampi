@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<div class="table-responsive">
    <table class="table table-striped table-hover text-center align-middle">
        <thead style="background-color: #130f40; color: white; ">
            <tr>
                <th>#</th>
                <th>Kategori Adı</th>
                <th>Sil</th>
                <th>Güncelle</th>
                <th>Başlıklar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.CategoryId</th>
                    <td>@item.CategoryName</td>
                    <td>
                        <a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn" style="background-color: #3ae374">
                            <i class="bi bi-trash"></i> Sil
                        </a>
                    </td>
                    <td>
                        <a href="/AdminCategory/EditCategory/@item.CategoryId" class="btn" style="background-color: #17c0eb">
                            <i class="bi bi-pencil-square"></i> Güncelle
                        </a>
                    </td>
                    <td>
                        <a href="#" class="btn" style="background-color: #7d5fff">
                            <i class="bi bi-list"></i> Başlıklar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<a href="/AdminCategory/AddCategory/" class="btn" style="background-color: #ffb142 ">
    <i class="bi bi-plus-circle"></i> Yeni Kategori
</a>

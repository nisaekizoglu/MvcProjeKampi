@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="table-responsive">
    <table class="table table-striped table-hover text-center align-middle">
        <thead style="background-color: #130f40; color: white; ">
            <tr>
                <th>#</th>
                <th>Kullanıcı Mail</th>
                <th>Yetki</th>
                <th>Durum</th>
                <th>Yetkisiz Bırak</th>
                <th>Yetkisini Değiştir</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.AdminId</th>
                    <td>@item.AdminUserName</td>
                    <td>@item.AdminRole</td>
                    <td>Aktif</td>
                    <td>
                        <a href="/Authorization/DeleteAdmin/@item.AdminId" class="btn" style="background-color: #3ae374">
                            <i class="bi bi-trash"></i> Pasif Yap
                        </a>
                    </td>
                    <td>
                        <a href="/Authorization/EditAdmin/@item.AdminId" class="btn" style="background-color: #17c0eb">
                            <i class="bi bi-pencil-square"></i> Yetkisini Değiştir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<a href="/Authorization/AddAdmin" class="btn" style="background-color: #ffb142 ">
    <i class="bi bi-plus-circle"></i> Yeni Admin Tanımla
</a>

